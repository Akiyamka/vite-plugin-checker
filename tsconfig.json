{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ESNext"],
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
