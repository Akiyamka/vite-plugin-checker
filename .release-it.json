{
  "git": {
    "commitMessage": "chore(release): release v${version}",
    "requireUpstream": false
  },
  "hooks": {
    "before:init": ["pnpm i", "rm -rf lib"],
    "after:bump": ["pnpm run build"],
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "github": {
    "release": true,
    "draft": true
  }
}
